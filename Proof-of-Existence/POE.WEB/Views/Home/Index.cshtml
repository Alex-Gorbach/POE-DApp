@model System.Threading.Tasks.Task<string>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.5/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.5/js/fileinput.min.js"></script>


<div style="display: flex; margin-top: 20px;">
@if (User.Identity.IsAuthenticated)
{
   
       
            using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

        <div>
            <input id="input-b1" name="file1" type="file" class="file" data-show-preview="false" >
            <label for="password">Private key:</label>
            <input type="password" name="privateKeyUpload" id="password" />
            <input type="submit" class="btn btn-default" value="Send to blockchain"/>
        </div>
            }
       
        
        using(Html.BeginForm("Check", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div>
            <input id="input-b2" name="file2" type="file" class="file" data-show-preview="false" >
            <label for="password">Private key:</label>
            <input type="password" name="privateKeyCheck" id="password" />
            <input type="submit" class="btn btn-default"  value="Verify"/>
        </div>
    }



}
else
{
    <h3>
        Please, login or register to access the service</h3>
}
</div>

<script>
  
    $("#input-b1").fileinput({'showUpload':false, 'previewFileType':'any'});
    $("#input-b2").fileinput({'showUpload':false, 'previewFileType':'any'});
</script>